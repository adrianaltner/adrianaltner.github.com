---
import Layout from "~/layouts/PageLayout.astro";
import FormattedDate from "~/components/FormattedDate.astro";
const meta = {
  title: "About",
  description: "About",
  pubDate: new Date("August 08 2021"),
  // updatedDate: new Date("August 08 2021"),
  heroImage: "/blog-placeholder-about.jpg",
};
---

<Layout {meta}>
  <article>
    <div class="hero-image">
      {meta.heroImage && <img width={1020} height={510} src={ meta.heroImage} alt="" />}
    </div>
    <div class="prose">
      <div class="title">
        <div class="date">
          <FormattedDate date={meta.pubDate} />
          <!-- {
            meta.updatedDate && (
              <div class="last-updated-on">
                Last updated on <FormattedDate date={meta.updatedDate} />
              </div>
            )
          } -->
        </div>
        <h1>{meta.title}</h1>
        <hr />
      </div>
      <slot />
    </div>
  </article>
</Layout>


<style>
  .hero-image {
    width: 100%;

    & img {
      display: block;
      margin: 0 auto;
      border-radius: 12px;
      box-shadow: var(--box-shadow);
    }
  }

  .prose {
    width: 720px;
    max-width: calc(100% - 2em);
    margin: auto;
    padding: 1em;
    color: rgb(var(--gray-dark));
  }

  .title {
    margin-bottom: 1em;
    padding: 1em 0;
    text-align: center;
    line-height: 1;

    & h1 {
      margin: 0 0 0.5em 0;
    }
  }

  .date {
    margin-bottom: 0.5em;
    color: rgb(var(--gray));
  }

  .last-updated-on {
    font-style: italic;
  }
</style>